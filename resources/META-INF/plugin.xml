<idea-plugin>
  <id>com.zhkeen.flyrise.fe.translate</id>
  <name>FeTranslate</name>
  <version>1.0</version>
  <vendor email="support@zh-keen.com" url="http://github.com/FeTranslate">珠海敏锐信息技术有限公司</vendor>

  <description><![CDATA[
      本插件用于FE企业运营平台多语言翻译插件<br/>
    ]]></description>

  <change-notes><![CDATA[
      1.0.0 第一个发布版本
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->

    <action id="com.zhkeen.flyrise.fe.translate.actions.TranslateReplaceAction" class="com.zhkeen.flyrise.fe.translate.actions.TranslateReplaceAction" text="Translate"
      description="翻译">
      <add-to-group group-id="EditMenu" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>
    </action>

    <action id="com.zhkeen.flyrise.fe.translate.actions.TranslateModifyAction" class="com.zhkeen.flyrise.fe.translate.actions.TranslateModifyAction" text="View Translate"
      description="查看翻译结果并修改">
      <add-to-group group-id="EditMenu" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt T"/>
    </action>
  </actions>

</idea-plugin>